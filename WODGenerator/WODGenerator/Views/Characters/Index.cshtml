@using System.Collections.Generic
@model System.Collections.Generic.IEnumerable<WODGenerator.Models.Characters>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Alignment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Species)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inventory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlotHook)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Abl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attrib)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alignment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlotHook)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abl.AblId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attrib.AttribId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.GameId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loc.LocId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CharId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CharId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CharId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
